# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# OpenRouter API Configuration (Required for AI features)
# Get your API key from: https://openrouter.ai/keys
# Model: minimax/minimax-m2 (for UI generation)
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key-here

# Supabase Configuration (Required)
# Get these from your Supabase project dashboard
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Google Maps API (Optional)
# Used for location-based features
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Development Settings
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# AI Model Settings
# OpenRouter model configuration
NEXT_PUBLIC_OPENROUTER_MODEL_COMPLEX=minimax/minimax-m2
NEXT_PUBLIC_OPENROUTER_MODEL_MINI=minimax/minimax-m2
NEXT_PUBLIC_OPENROUTER_MODEL_NANO=minimax/minimax-m2

# AI Parameters
OPENROUTER_REASONING_EFFORT=medium
OPENROUTER_VERBOSITY=medium
OPENROUTER_MAX_TOKENS=4000
OPENROUTER_TEMPERATURE=0.7

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_COMPONENT_LIBRARY=true
NEXT_PUBLIC_ENABLE_COLLABORATION=true
NEXT_PUBLIC_ENABLE_EXPORT_FEATURES=true

# Database Settings
DATABASE_URL=postgresql://user:password@localhost:5432/cortex_relume

# File Upload Settings
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=image/*,application/pdf

# Cache Settings
NEXT_PUBLIC_CACHE_TTL=3600
REDIS_URL=redis://localhost:6379

# Analytics (Optional)
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id
SENTRY_DSN=your-sentry-dsn-here

# External Integrations (Optional)
# Figma Integration
FIGMA_CLIENT_ID=your-figma-client-id
FIGMA_CLIENT_SECRET=your-figma-client-secret

# Webflow Integration
WEBFLOW_CLIENT_ID=your-webflow-client-id
WEBFLOW_CLIENT_SECRET=your-webflow-client-secret
