# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# OpenAI API Configuration (Required)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Supabase Configuration (Required)
# Get these from your Supabase project dashboard
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Google Maps API (Optional)
# Used for location-based features
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Development Settings
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# AI Model Settings
# GPT-5 model selection for different features
NEXT_PUBLIC_GPT5_MODEL_COMPLEX=gpt-5
NEXT_PUBLIC_GPT5_MODEL_MINI=gpt-5-mini
NEXT_PUBLIC_GPT5_MODEL_NANO=gpt-5-nano

# GPT-5 Parameters
GPT5_REASONING_EFFORT=medium
GPT5_VERBOSITY=medium
GPT5_MAX_TOKENS=4000
GPT5_TEMPERATURE=0.7

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_COMPONENT_LIBRARY=true
NEXT_PUBLIC_ENABLE_COLLABORATION=true
NEXT_PUBLIC_ENABLE_EXPORT_FEATURES=true

# Database Settings
DATABASE_URL=postgresql://user:password@localhost:5432/cortex_relume

# File Upload Settings
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=image/*,application/pdf

# Cache Settings
NEXT_PUBLIC_CACHE_TTL=3600
REDIS_URL=redis://localhost:6379

# Analytics (Optional)
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id
SENTRY_DSN=your-sentry-dsn-here

# External Integrations (Optional)
# Figma Integration
FIGMA_CLIENT_ID=your-figma-client-id
FIGMA_CLIENT_SECRET=your-figma-client-secret

# Webflow Integration
WEBFLOW_CLIENT_ID=your-webflow-client-id
WEBFLOW_CLIENT_SECRET=your-webflow-client-secret